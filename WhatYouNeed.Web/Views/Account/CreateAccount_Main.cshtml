@model WhatYouNeed.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "[[[Register]]]";
}

@section Styles {

    <link href="~/Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
    <link href="~/Content/jsTree/themes/default/style.min.css" rel="stylesheet" />

    <style type="text/css">
        .field-validation-error {
            color: #ff0000;
            display: block;
        }
    </style>
}


<!-- Start Main Content -->
<div class=" main-section" style="background-color:#EAF4D3">
    <div class="container" style="background-color:#EAF4D3">
        <div class="row mt-1">
            <div class="col-md-2  d-none d-md-inline">
                <img src="@ImageHelper.GetCommunityImagePath("LogoTnTcom_150x184", "png"))" style="display: block;" />
            </div>
            <div class="col-md-9">
                <div class="card border-success" id="divPubRegisterHaut">
                    <img src="@ImageHelper.GetCommunityImagePubsPath("pub_Register_Haut_800x200_Img1", "png"))" style="display: block;" pubHaut />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12 mx-auto ">
                <div class="card border border-success mrg-t">
                    <div class="card-header bdr-b" style="text-align:center;">
                        <h4>[[[Create an account]]]</h4>
                        <p>
                            Quel Type de Compte souhaitez vous Créer ?
                        </p>
                    </div>
                    <div class="card-body" style="text-align:center;">
                        @*<a class="btn btn-success btn-lg  w-25" href="@Url.Action("RegisterParticulier", "Account" )">[[[Personal]]]</a>
                            <a class="btn btn-success btn-lg  w-25" href="@Url.Action("RegisterPro", "Account" )">[[[Professional]]]</a>*@
                        <div class="row mt-1 ">
                            <div class="col col-md-4">
                                <div class="card">
                                    <a href="@Url.Action("RegisterParticulier", "Account" )">
                                        <img class="card-img-bottom" src="~/Images/Community/Account_Particulier.jpg" alt="Créer un Compte Particulier" style="width:200px" />
                                    </a>
                                    <div class="card-body">
                                        <h4 class="card-title">Particulier</h4>
                                        <p class="card-text">Créer votre compte particulier. Deposer une annonce pour vendre ou acheter des articles et services grauitement.</p>
                                    </div>

                                </div>
                            </div>
                            <div class="col col-md-4">
                                <div class="card">
                                    <a href="@Url.Action("RegisterPro", "Account" )">
                                        <img class="card-img-top" src="~/Images/Community/Account_Pro.jpg" alt="Créer un Compte Professionnel" style="width:200px" />
                                    </a>
                                    <div class="card-body">
                                        <h4 class="card-title">Professionnel</h4>
                                        <p class="card-text">Créer un compte Professionnel simplement grace a votre code de carte Trucs N Trocs, et bénéficiez de votre propre vitrine et espace pour commercialiser vos produits.</p>

                                    </div>

                                </div>
                            </div>
                            <div class="col col-md-4">
                                <div class="card">
                                    <a href="@Url.Action("RegisterAnnonceur", "Account" )">
                                        <img class="card-img-top" src="~/Images/Community/Account_Annonceur.jpg" alt="Créer un Compte Annonceur" style="width:200px" />
                                    </a>
                                    <div class="card-body">
                                        <h4 class="card-title">Annonceur</h4>
                                        <p class="card-text">Devenez annonceur de publicité sur notre site Truc N Trocs et choisissez votre espace publicitaire sur nos pages afin de mettre en valeur votre entreprise.</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer " style="text-align:center">
                    </div>
                </div>
            </div>
        </div>

    </div>

